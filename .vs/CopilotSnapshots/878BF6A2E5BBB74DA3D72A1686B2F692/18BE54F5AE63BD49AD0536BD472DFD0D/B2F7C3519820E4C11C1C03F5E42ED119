using System;
using UnityEngine;
using UnityEngine.SceneManagement;

public class MainMenuManager : MonoBehaviour
{
    public void StartGame()
    {
        Debug.Log("MainMenuManager: Starting game via PrototypeBootstrapper");
        
        // Use the PrototypeBootstrapper system to start gameplay
        // This will properly hide the menu and start the game
        PrototypeBootstrapper.StartGameplay();
    }

    public void QuitGame()
    {
        // Delegate to GameManager if available, otherwise quit directly
        if (GameManager.Instance != null)
        {
            GameManager.Instance.QuitGame();
        }
        else
        {
            Application.Quit(); // Sluit de applicatie
        }
        Debug.Log("Game Quit"); // Alleen zichtbaar in de editor
    }
}
