{
    public void RestartGame()
    {
        SceneManager.LoadScene("SampleScene"); // Laad de gameplay-scène opnieuw
    }

    public void ReturnToMenu()
    {
        SceneManager.LoadScene("SampleScene"); // Ga terug naar het hoofdmenu (voor nu naar dezelfde scene)
    }
}
